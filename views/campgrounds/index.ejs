<%layout('layout/boilerplate')%>
    <h1>AVAILABLE CAMPGROUNDS </h1>
    <br>
    <p> ADD <a href="/campgrounds/new">NEW CAMPGROUND</a></p>
    <% for ( let i of campground) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                <img src="<%=i.image%>" class="img-fluid rounded-start" alt="image">
            </div>
            <div class="col-md-8">  
                <div class="card-body">
                    <h5 class="card-title"><%=i.title%></h5>
                    <p class="card-text"><%=i.description%></p>
                    <p class="card-text"><small class="text-muted"><%=i.location%></small></p>
                    <p class="card-text"> <a class="btn btn-primary" href="/campgrounds/<%=i._id%>">View <%= i.title%> </a> </p>
                </div>
            </div>
            </div>
        </div>
        <% } %> 


