<%layout('layout/boilerplate')%>
    <div id="cluster" style="width: 100%; height: 500px"></div>
    <h1>AVAILABLE CAMPGROUNDS</h1>
    <br />
    <p>ADD <a href="/campgrounds/new">NEW CAMPGROUND</a></p>
    <% for ( let i of campground) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(i.images.length) { %>
                        <img src="<%=i.images[0].thumbnail2%>" class="img-fluid rounded-start" alt="image" />
                        <% } else { %>
                            <img src="https://cdn.pixabay.com/photo/2018/12/24/22/19/camping-3893587__340.jpg" class="img-fluid rounded-start" alt="image" width="400px" />
                            <% } %>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=i.title%>
                        </h5>
                        <p class="card-text">
                            <%=i.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted"><%=i.location%></small>
                        </p>
                        <p class="card-text">
                            <a class="btn btn-primary" href="/campgrounds/<%=i._id%>">View <%= i.title%>
                    </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <br />
            <script>
                const token = '<%-process.env.MAPBOX_TOKEN%>';
                const campground = {
                    features: <%-JSON.stringify(campground)%>;
                };
                // so that our cluster map will pick this up and use it as a source data
            </script>
            <script src="js/clusterMap.js"></script>