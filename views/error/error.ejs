<% layout('layout/boilerplate') %>

    <div class="container justify-items-center text-center col-8 offset-2">
        <h1>
            <%= err.status_code %>
        </h1>
        <div class="alert alert-danger">
            <h4>
                <%= err.message %>
            </h4>

            <% if (process.env.NODE_ENV !== 'production') { %>
                <p>
                    <%= err.stack %>
                </p>
                <% } %>
        </div>
        <div class="button">
            <button class="btn btn-info">
            <a href="/" style="text-decoration:none; color:black">Back to Home Page</a>
        </button>
        </div>
    </div>
    <br>